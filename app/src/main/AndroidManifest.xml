<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sistempakar">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_pakar_komputer_rev2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pakar_komputer_rev2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SistemPakar"
        tools:targetApi="31">
        <activity
            android:name=".activities.InformasiKerusakanActivity"
            android:label="@string/title_info_kerusakan" />
        <activity
            android:name=".activities.BantuanAplikasiActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.DetailKerusakanActivity"
            android:label="@string/title_appbar_detailkerusakan"/>
        <activity android:name=".activities.TentangAppActivity"
            android:label="@string/title_appbar_tentang"/>
        <activity android:name=".activities.PertanyaanGejalaActivity"
            android:label="@string/title_appbar_diagosa"/>

        <activity
            android:name=".activities.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>